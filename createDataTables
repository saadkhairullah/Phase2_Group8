CREATE TABLE item
  (iId		    INT				     NOT NULL,
   Iname		  VARCHAR(16),
   Sprice		  DECIMAL(4,2),
   Category	  VARCHAR(7),
  PRIMARY KEY(iId));

CREATE TABLE store (
  sId int(11) NOT NULL,
  Sname varchar(24),
  Street varchar(20),
  City varchar(20),
  StateAb varchar(3),
  ZipCode int(11),
  sDate date,
  Telno varchar(15),
  SURL varchar(255), 
PRIMARY KEY(sId));

CREATE TABLE vendor (
  vId int(11) NOT NULL,
  Vname varchar(30),
  Street varchar(30),
  City varchar(20),
  StateAb varchar(3),
  ZipCode int(11), 
PRIMARY KEY(vId));

CREATE TABLE customer (
  cId int(11) NOT NULL,
  Cname varchar(24),
   LoyaltyScore INT, 
  Street varchar(20),
  City varchar(20),
  StateAb varchar(3),
  ZipCode int(11),
PRIMARY KEY(cId));
