CREATE TABLE store (
  sId int(11) NOT NULL,
  Sname varchar(24),
  Street varchar(20),
  City varchar(20),
  StateAb varchar(3),
  ZipCode int(11),
  sDate date,
  Telno varchar(15),
  SURL varchar(255), 
PRIMARY KEY(sId));

CREATE TABLE vendor (
  vId int(11) NOT NULL,
  Vname varchar(30),
  Street varchar(30),
  City varchar(20),
  StateAb varchar(3),
  ZipCode int(11), 
PRIMARY KEY(vId));

CREATE TABLE vendor_store
  (vId	INT		NOT NULL,
   sId	INT		NOT NULL,
  PRIMARY KEY(vId, sId));

CREATE TABLE item
  (iId     INT		 NOT NULL,
   Iname   VARCHAR(16),
   Sprice  DECIMAL(4,2),
   Category VARCHAR(7),
  PRIMARY KEY(iId));

  CREATE TABLE old_price
(iId	  INT	     NOT NULL,
   oId	  INT	  NOT NULL,
   Sprice DECIMAL(4,2),
   Sdate	  DATE,		
   Edate	  DATE,
   PRIMARY KEY (iId, oId),
  FOREIGN KEY(iId) REFERENCES item(iId));

CREATE TABLE orders
  (oId	  INT		NOT NULL,
   Odate  DATE,
   Ddate  DATE,
   Amount  DECIMAL(5,2),
   cId	  INT		NOT NULL,
   sId		INT	NOT NULL,
  PRIMARY KEY(oId, cId, sId),
  FOREIGN KEY(cId) REFERENCES CUSTOMER(cId),
  FOREIGN KEY(sId) REFERENCES STORE(sId));

CREATE TABLE STORE_ITEM
(sId	INT	NOT NULL,
 iId	INT	NOT NULL,
 Scount INT,
PRIMARY KEY(iId,sId),
FOREIGN KEY(iId) REFERENCES item(iId),
FOREIGN KEY(sId) REFERENCES store(sId));

CREATE TABLE customer (
  cId int(11) NOT NULL,
  Cname varchar(24),
   LoyaltyScore INT, 
  Street varchar(20),
  City varchar(20),
  StateAb varchar(3),
  ZipCode int(11),
PRIMARY KEY(cId));

CREATE TABLE store_customer
 (sID	INT	NOT NULL,
   cId	INT	NOT NULL,
  PRIMARY KEY(sId, cId),
  FOREIGN KEY(sId) REFERENCES store(sId),
  FOREIGN KEY(cId) REFERENCES customer(cId));


